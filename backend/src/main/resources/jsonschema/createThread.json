{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties" : false,
	"properties": {
		"title": {
			"type": "string"
		},
		"icon": {
			"type": "string"
		},
		"mode": {
			"type": "integer"
		},
		"structure": {
			"type": "object",
			"required": ["id"],
			"properties": {
				"id" : {
					"type": "string"
				},
				"name" : {
					"type": "string"
				}
			}
		}
	},
	"required": [
		"title",
		"mode",
		"structure"
	]
}