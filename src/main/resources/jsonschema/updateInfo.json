{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties" : false,
	"properties": {
		"title": {
			"type": "string"
		},
		"content": {
			"type": "string"
		},
		"status": {
			"type": "integer"
		},
		"publication_date": {
			"description": "Unix timestamp representing the start date of the booking",
      		"type": "integer"
		},
		"expiration_date": {
			"description": "Unix timestamp representing the start date of the booking",
      		"type": "integer"
		},
		"is_headline": {
      		"type": "boolean"
		},
		"thread_id": {
			"type": "integer"
		}
	},
	"required": [
		"thread_id"
	]
}